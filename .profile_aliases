alias phpunit="/usr/local/bin/phpunit"
alias ls='ls --color="auto"'
alias lal="ls -lasht"
alias apache-restart="sudo service apache2 restart"
alias apache-home="cd /etc/apache2"
alias vhosts="cd /etc/apache2/sites-available"
alias apps="cd ~/apps"
alias desktop="cd ~/Desktop"
alias downloads="cd ~/Downloads"
alias dox="cd ~/Documents"
alias vids="cd ~/Videos"
